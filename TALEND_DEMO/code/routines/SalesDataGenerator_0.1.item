    /**
     * {talendTypes} Double
     * 
     * {Category} SalesDataGenerator
     *
     * {param} string("Tablet") Catagory
     * 
     * {example} getPrice("Tablet") # Tablet
     */
    public static Double getPrice(String Catagory) {
    	Double  returnVal =new Double(0);
    	Random rand = new Random(); 
    	
		switch (Catagory) {
        case "Tablet": returnVal= BigDecimal.valueOf(rand.nextInt(40000 - 6500) + 6500)
        	    .setScale(2, RoundingMode.HALF_UP)
        	    .doubleValue(); 
        		break;
        case "Smartphone":  returnVal= BigDecimal.valueOf(rand.nextInt(60000 - 9000) + 9000)
        	    .setScale(2, RoundingMode.HALF_UP)
        	    .doubleValue();  
                 break;
        case "Laptop":  returnVal= BigDecimal.valueOf(rand.nextInt(99999 - 35000) + 35000)
        	    .setScale(2, RoundingMode.HALF_UP)
        	    .doubleValue();  
                 break;
        case "Watch":  returnVal= BigDecimal.valueOf(rand.nextInt(15000 - 4000) + 4000)
        	    .setScale(2, RoundingMode.HALF_UP)
        	    .doubleValue(); 
                 break;
        default: returnVal= BigDecimal.valueOf(rand.nextInt(10000 - 35000) + 35000)
        	    .setScale(2, RoundingMode.HALF_UP)
        	    .doubleValue(); 
                 break;
		}
        return returnVal;
    }
    
    
    /**
     * {talendTypes} Double
     * 
     * {Category} SalesDataGenerator
     *
     * {param} string("Tablet") Brand
     * 
     * {example} getPrice("Tablet") # Tablet
     */
    public static String getProductCode(String Catagory, String Brand) {
    	String  returnVal ="";
    	Random rand = new Random(); 
    	
		switch (Catagory) {
        case "Tablet": returnVal=Brand.substring(0, 2).toUpperCase() + Catagory.substring(0, 1).toUpperCase() + Integer.toString(rand.nextInt(20000 - 10000) + 10000);
        		break;
        case "Smartphone":  returnVal= Brand.substring(0, 2).toUpperCase()+ Catagory.substring(0, 1).toUpperCase()  + Integer.toString(rand.nextInt(30000 - 20000) + 20000);  
                 break;
        case "Laptop":  returnVal= Brand.substring(0, 2).toUpperCase()+ Catagory.substring(0, 1).toUpperCase()  + Integer.toString(rand.nextInt(40000 - 30000) + 30000);
                 break;
        case "Watch":  returnVal= Brand.substring(0, 2).toUpperCase()+ Catagory.substring(0, 1).toUpperCase()  + Integer.toString(rand.nextInt(50000 - 40000) + 40000);
                 break;
        default: returnVal= "PRO" + Integer.toString(rand.nextInt(99999 - 50000) + 50000); 
                 break;
		}
        return returnVal;
    }

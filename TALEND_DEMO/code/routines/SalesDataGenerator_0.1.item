    public static String getEmail(String FirstName, String LastName) {
        String[] list = { "aol.com",  "gmail.com", "hotmail.com", "inbox.com", "outlook.com", "protonmail.com", "yahoo.com",
        		"zohomail.com"}; 
        Random rand = new Random(); 
        int rand_int1 = rand.nextInt(Calendar.getInstance().get(Calendar.YEAR) - 1960) + 1960; 
        Integer random = 0 + ((Long) Math.round(Math.random() * (list.length - 1 - 0))).intValue();
        return  FirstName.toLowerCase().trim().replace(" ", "_") +"_"+LastName.toLowerCase().trim().replace(" ", "_") +"_"+rand_int1+"@" + list[random];
    }
    
    
